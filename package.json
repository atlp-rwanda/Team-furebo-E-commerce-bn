{
  "name": "team-furebo-e-commerce-bn",
  "version": "1.0.0",
  "description": "[![atlp-rwanda](https://circleci.com/gh/atlp-rwanda/Team-furebo-E-commerce-bn.svg?style=svg)](https://app.circleci.com/pipelines/github/atlp-rwanda)",
  "main": "index.js",
  "scripts": {
    "test": "nyc --reporter=lcov --reporter=text mocha src/tests/*.test.js --timeout 60000 --require @babel/register --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "start": "nodemon -L --exec babel-node index.js",
    "migrate": "npx sequelize-cli db:migrate",
    "unmigrate": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "unseed": "npx sequelize-cli db:seed:undo",
    "unseed-all": "npx sequelize-cli db:seed:undo:all",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "lint-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jshintConfig": {
    "esversion": 6
  },
  "lint-staged": {
    "*": [
      "npm run lint",
      "npm run format",
      "npm test -- --coverage --silent --passWithNoTests --colors --verbose --no-cache"
    ]
  },
  "plugins": [
    "jest"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atlp-rwanda/Team-furebo-E-commerce-bn.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atlp-rwanda/Team-furebo-E-commerce-bn/issues"
  },
  "homepage": "https://github.com/atlp-rwanda/Team-furebo-E-commerce-bn#readme",
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@sendgrid/mail": "^7.7.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-istanbul": "^6.1.1",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.21",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.29.3",
    "sequelize-cli": "^6.6.0",
    "sinon": "^15.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/eslint-parser": "^7.21.3",
    "@babel/node": "^7.20.7",
    "coverage": "^0.4.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.1.2",
    "mocha": "^10.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3"
  }
}
